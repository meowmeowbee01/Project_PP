{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Assemble and Link NES",
			"type": "shell",
			"command": "${config:cc65}\\ca65.exe",
			"args": [
				"${relativeFile}",
				"-g",
				"-o",
				"build/${fileBasenameNoExtension}.o"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Assembles an NES project using cc65."
		},
		{
			"label": "Build NES",
			"type": "shell",
			"command": "${config:cc65}\\ld65.exe",
			"args": [
				"-t",
				"nes",
				"-o",
				"build\\${fileBasenameNoExtension}.nes",
				"build\\${fileBasenameNoExtension}.o",
				"--dbgfile",
				"build\\${fileBasenameNoExtension}.dbg"
			],
			"group": "build",
			"dependsOn": "Assemble and Link NES",
			"detail": "Links the NES object file to create a ROM."
		}
	]
}
