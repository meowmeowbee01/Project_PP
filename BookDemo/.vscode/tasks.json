{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Assemble and Link NES",
        "type": "shell",
        "command": "C:\\cc65\\bin\\ca65.exe",
        "args": [
          "demo.s",
          "-g",
          "-o",
          "demo.o"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$ca65"],
        "detail": "Assembles an NES project using cc65."
      },
      {
        "label": "Build NES",
        "type": "shell",
        "command": "C:\\cc65\\bin\\ld65.exe",
        "args": [
          "-o", "demo.nes",
          "-C", "memory.cfg",
          "demo.o",
          "--dbgfile", "demo.dbg"
        ],
        "group": "build",
        "dependsOn": "Assemble and Link NES",
        "problemMatcher": ["$ld65"],
        "detail": "Links the NES object file to create a ROM."
      }
    ]
  }